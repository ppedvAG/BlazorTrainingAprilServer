@page "/formular"
<h3>Formular</h3>
Model="MyPerson"
<EditForm OnSubmit="speichern" EditContext="myEditContext">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Größe</label>
        <div class="col-sm-10">

            <InputNumber @bind-Value="MyPerson.Gross" class="form-control"></InputNumber>
            <ValidationMessage For="@(()=>MyPerson.Gross)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">

            <InputText @bind-Value="MyPerson.Name" class="form-control"></InputText>
            <ValidationMessage For="@(()=>MyPerson.Name)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Geb Datum</label>
        <div class="col-sm-10">

            <InputDate @bind-Value="MyPerson.GebDat" class="form-control"></InputDate>
            <ValidationMessage For="@(()=>MyPerson.GebDat)"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">save </button>
    <ValidationSummary></ValidationSummary>
</EditForm>

@code {
    public Person MyPerson { get; set; } = new Person();
    EditContext myEditContext;
    void speichern()
    {

    }
    protected override void OnInitialized()
    {
        myEditContext = new EditContext(MyPerson);
        myEditContext.SetFieldCssClassProvider(new BoostrapCss());
    }

}
