@page "/wt" 
<h3>WochentagListe</h3>
<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item active" >Wochentage</li>
            @for (int i = 0; i < 7; i++)
            {
                int x = i;
                <li class="list-group-item list-group-item-action" @onclick="()=>auswahl(x)" >
                    @DateTime.Now.AddDays(i).ToString("dddd") 
                </li>

            }
        </ul>
    </div>
   
</div>
<h1>@Tag</h1>
@code {
    public string Tag { get; set; }
    void normal()
    {

    }
    void auswahl(int i)
    {
        Tag = DateTime.Now.AddDays(i).ToString("dddd");
    }

}
